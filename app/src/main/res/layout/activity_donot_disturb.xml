<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_donot_disturb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.SDT.servicedog.DonotDisturbActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <WebView
            android:id="@+id/textView_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@string/font_family_universal"
            android:text=""
            android:textStyle="normal" />

        <TextView
            android:id="@+id/editText_to"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginRight="0dp"
            android:background="@color/white"
            android:ems="5"
            android:fontFamily="@string/font_family_universal"
            android:gravity="center"
            android:hint="To"
            android:padding="5dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_below="@+id/editText_from"
            android:layout_marginTop="43dp"
            android:layout_alignStart="@+id/editText_from"
            android:layout_alignEnd="@+id/editText_from" />

        <TextView
            android:id="@+id/editText_from"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:ems="5"
            android:fontFamily="@string/font_family_universal"
            android:gravity="center"
            android:hint="From"
            android:padding="5dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_below="@+id/textView_message"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/login_btn"
            android:fontFamily="@string/font_family_universal"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/black"
            android:textSize="@dimen/fontSizeUniversal"
            android:textStyle="normal"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/editText_to"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
