<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:weightSum="1"
    android:background="@drawable/bg"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Submit"
            android:id="@+id/changepswdBtn"
            android:background="@drawable/login_btn"
            android:textColor="@color/black"
            android:layout_below="@+id/cnfPswd"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@string/font_family_universal"
            android:textStyle="normal"
            android:textSize="@dimen/fontSizeUniversal"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/oldPswd"
            android:hint=" Old Password"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:editable="true"
            android:paddingLeft="5dp"
            android:background="@color/White"
            android:textIsSelectable="false"
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="textPassword"
            android:fontFamily="@string/font_family_universal"
            android:textStyle="normal"
            android:textSize="@dimen/fontSizeUniversal"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/newPswd"
            android:layout_below="@+id/oldPswd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:hint=" New Password"
            android:editable="true"
            android:paddingLeft="5dp"
            android:background="@color/White"
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="textPassword"
            android:fontFamily="@string/font_family_universal"
            android:textStyle="normal"
            android:textSize="@dimen/fontSizeUniversal"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/cnfPswd"
            android:layout_below="@+id/newPswd"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/newPswd"
            android:hint=" Confirm Password"
            android:editable="true"
            android:paddingLeft="5dp"
            android:layout_marginTop="25dp"
            android:background="@color/White"
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="textPassword"
            android:fontFamily="@string/font_family_universal"
            android:textStyle="normal"
            android:textSize="@dimen/fontSizeUniversal"/>

    </RelativeLayout>
</LinearLayout>