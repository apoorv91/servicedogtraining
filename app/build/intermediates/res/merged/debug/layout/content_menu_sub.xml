<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_menu_sub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.SDT.servicedog.MenuSubActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relLayoutDesc"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="50"
            android:background="@drawable/feedback_skybg"
            android:paddingTop="0dp" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/img1"
            android:layout_weight="50"
            android:background="@drawable/feedback_skybg"
            android:paddingTop="0dp" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/img2"
            android:layout_weight="50"
            android:background="@drawable/feedback_skybg"
            android:paddingTop="0dp" />

        <Button
            android:id="@+id/docsBtn"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/img1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/word_icon" />

        <Button
            android:id="@+id/btnVideo"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/docsBtn"
            android:layout_alignStart="@+id/img2"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/video_icon" />

        <Button
            android:id="@+id/audioBtn"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/img3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/audio_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageViewMenu"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/banner_bg" />

        <TextView
            android:id="@+id/textViewMenu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@string/font_family_universal"
            android:gravity="center"
            android:padding="20dp"
            android:text=""
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayoutDesc"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relLayoutHeader"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingRight="0dp">

        <WebView
            android:id="@+id/textview2Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview1Menu"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:focusable="true"
            android:fontFamily="@string/font_family_universal"
            android:inputType="textMultiLine"
            android:linksClickable="true"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorLink="@color/colorSecondary"
            android:textAlignment="viewEnd"
            android:textStyle="normal">

        </WebView>


        <!--<TextView-->
        <!--android:id="@+id/textview2Menu"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/textview1Menu"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:background="@android:color/transparent"-->
        <!--android:cursorVisible="false"-->
        <!--android:focusable="true"-->
        <!--android:fontFamily="@string/font_family_universal"-->
        <!--android:inputType="textMultiLine"-->
        <!--android:linksClickable="true"-->
        <!--android:paddingLeft="5dp"-->
        <!--android:paddingRight="5dp"-->
        <!--android:text=""-->
        <!--android:textColorLink="@color/colorSecondary"-->
        <!--android:textSize="16dp"-->
        <!--android:textStyle="normal" />-->

        <TextView

            android:id="@+id/textview1Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@string/font_family_universal"
            android:text="Description"
            android:textColor="@color/colorSecondary"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
